<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp"
    android:id="@+id/produtadapter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produtonome"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:text="NOME_PRODUTO"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/produtonome"
        android:id="@+id/produtovalor"
        android:textSize="20dp"
        android:text="VALOR_PRODUTO"
        android:layout_alignParentRight="true"
        android:layout_below="@id/produtonome"/>




</RelativeLayout>
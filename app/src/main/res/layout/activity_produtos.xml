<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@android:dimen/app_icon_size"
    android:background="@color/colorPrimaryDark"
    tools:context=".ProdutosActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titulo_produtos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Produtos"
        android:textColor="@color/colorAccent"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/nome_produtos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingBottom="10dp"
        android:hint="Nome:"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/preco_produtos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Preco:"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:paddingBottom="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="LISTA PRODUTOS"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista_produtos"
        tools:listitem="@layout/adapter_produtos"
        />


</LinearLayout>